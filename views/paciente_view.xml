<odoo>
    <data>
      <!-- explicit list view definition -->

      <record model="ir.ui.view" id="gestion_pacientes.listado_paciente_tree">
        <field name="name">Datos del paciente</field>
        <field name="model">gestion_pacientes.paciente_model</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="surname"/>
            <field name ="dni"/> 
            <field name="telefono"/>
            <field name="fecha_nacimiento"/>
            <field name="email" widget="email"/>
            <field name="num_visitas"/>
          </tree>
        </field>
      </record>
  
      <!-- actions opening views on models -->
      <record model="ir.ui.view" id="gestion_pacientes.paciente_model_form">
        <field name="name">Datos del paciente</field>
        <field name="model">gestion_pacientes.paciente_model</field>
        <field name="arch" type="xml">
          <form string="paciente_data">
            <sheet>
              <group name="1">
                <h1 style="color:#a256a0;">Datos del paciente</h1>
              </group>
              <group name = "2">
                <h2 style="color:bold"><field name ="dni"/></h2>
              </group>
              <group name="3">
                <field name="name"/>
                <field name="surname"/>
                <field name="telefono"/>
                <field name="fecha_nacimiento"/>
                <field name="email"/>
                <field name="num_visitas"/>
              </group>
              <group name="4">
                <field name="img" widget="image" style="width: 120px; height: 150px;"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>

      <!-- server action to the one above -->
      <record model="ir.actions.act_window" id="gestion_pacientes.action_window_pacientes">
        <field name="name">Listado de pacientes</field>
        <field name="res_model">gestion_pacientes.paciente_model</field>
        <field name="view_mode">tree,form</field>
      </record>

  
